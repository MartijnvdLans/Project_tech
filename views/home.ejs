<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('layouts/head.ejs')-%>
</head>
<body>

    <main class="swipe_page">
        <section class="eenMatch displayNone"  id="matchScreen">
            <button class="close" id="kruisje">x</button>
            <img id="imgLeft" class="rolNaarRechts" src="/images/meisje.jpg" alt="match">
            <img id="imgRight" src="/images/jongen.jpg" alt="user">
            <h2>Het is een match!</h2>
        </section>
        <section class="likesOp">
            <h2>Er zijn geen mensen om te liken!</h2>
        </section>
        <section class="userPf" id="userPf" style="background-image:url('/images/<%= shows.foto %>')">
            <form action="/dislike" method="POST">
                <input type="hidden" name="id" value="<%= shows._id %>">
                <button class="dislike" id="dislike" type="submit"><img src="/images/cross.svg" alt="dislike"></button>
            </form>
            <form action="/like" method="POST">
                <input type="hidden" name="id" value="<%= shows._id %>">
                <button class="like" id="like" type="submit"><img src="/images/check.svg" alt="like"></button>
            </form>
            <div class="userInfo">
                <div class="cover">
                    <div class="overUser">
                        <h2><%= shows.name %></h2>
                        <h3><%= shows.year %> - <%= shows.lastEp %></h3>
                        <p><%= shows.desc %></p>
                    </div>
                </div>
            </div>
        </section>
    </main>

        <%- include('layouts/footer.ejs') -%>

</body>
</html> 