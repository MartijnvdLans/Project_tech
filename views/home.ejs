<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('layouts/head.ejs')-%>
</head>
<body>

    <main class="swipe_page">
        <section class="eenMatch displayNone"  id="matchScreen">
            <button class="close" id="kruisje">x</button>
            <img id="imgLeft" class="rolNaarRechts" src="/images/meisje.jpg" alt="match">
            <img id="imgRight" src="/images/jongen.jpg" alt="user">
            <h2>Het is een match!</h2>
        </section>
        <section class="likesOp">
            <h2>Er zijn geen mensen om te liken!</h2>
        </section>        
        <% users.forEach(function(user) { %>
        <section class="userPf" id="userPf">
            <form action="/" method="POST">
                <input type="hidden" name="id" value="<%= user._id %>">
                <button class="dislike" id="dislike" type="submit"><img src="/images/cross.svg" alt="dislike"></button>
                <button class="like" id="like" type="submit"><img src="/images/check.svg" alt="like"></button>
            </form>
            
            <div class="userInfo">
                <div class="cover">
                    <div class="overUser">
                        <h2><%= user.name %></h2>
                        <h3><%= user.age %></h3>
                        <p>Mijn naam is <%= user.name %> Ik ben overduidelijk een enorme fan van series, dat is dan ook waarom ik op deze app ...</p>
                    </div>
                        <figure><img src="/images/<%= user.cover %>" alt=""></figure>
                </div>
            </div>
        </section>
        <% }) %>
    </main>

        <%- include('layouts/footer.ejs') -%>

</body>
</html> 